<script type="text/javascript">

$(function(){
$('#color').simplecolorpicker();
$('#datetimepicker').datetimepicker();  
  
})
</script>

<form action="/visit" method="post" role="form">
  <div class="form-group">
    <label>Имя</label>
    <input  name='user_name' type="text" class="form-control"  placeholder="" value="<%=@name%>">
  </div>
  <div class="form-group">
    <label>Почта</label>
    <input  name="mail" type="text" class="form-control"  placeholder='' value="<%=@mail%>">
  </div>
  <div class="form-group">
    <label>Дата, Время</label>
    <input  id="datetimepicker" name="date" type="text" class="form-control" placeholder='' value="<%=@date%>">
      </div>

<div class="form-group">
  <label>Парикмахер</label>
    <select class="form-control" name="barber" value="<%=@barber%>">
  <option <%=@barber == 'Marco' ? 'selected' : '' %>>Marco</option>
  <option  <%=@barber == 'Polo' ? 'selected' : '' %>>Polo</option>
  <option  <%=@barber == 'Noone' ? 'selected' : '' %>>Noone</option>
    
</select>
</div>



<div class="form-group">
     <label>Lorem ipsum</label>
    <select name="color" id="color">
  <option value="#7bd148">Green</option>
  <option value="#5484ed">Bold blue</option>
  <option value="#a4bdfc">Blue</option>
  <option value="#46d6db">Turquoise</option>
  <option value="#7ae7bf">Light green</option>
  <option value="#51b749">Bold green</option>
  <option value="#fbd75b">Yellow</option>
  <option value="#ffb878">Orange</option>
  <option value="#ff887c">Red</option>
  <option value="#dc2127">Bold red</option>
  <option value="#dbadff">Purple</option>
  <option value="#e1e1e1">Gray</option>
</select>
   
  </div>

  
  <button type="submit" class="btn btn-primary">YARRR!1</button>

</form>



